config system virtual-switch
    edit "internal"
        set physical-switch "sw0"
        config port
            delete "internal2"
        end
    next
end
config system interface
    edit "internal2"
        set vdom "root"
        set ip 172.16.220.1 255.255.255.0
        set allowaccess ping https
        set type physical
        set alias "LAN_xy"
        set role lan
        set snmp-index 8
    next
end
config firewall address
    edit "SSLVPN_TUNNEL_ADDR1"
        set uuid 7ef9198e-7224-51ed-3253-542a4a36c525
        set type iprange
        set associated-interface "ssl.root"
        set start-ip 10.199.1.100
        set end-ip 10.199.1.200
    next
end
config firewall service custom 
edit SMTP_587
set tcp-portrange 587 
next
end
config firewall service group
    edit "G_S_SDAG"
        set member "DNS" "HTTP" "HTTPS" "IKE" "IMAPS" "NTP" "POP3S" "RDP" "SMTP" "SMTP_587"
    next
end
config ips sensor
    edit "sdag_standard_ips"
        set scan-botnet-connections block
        config entries
            edit 1
            next
        end
    next
end
config application list
    edit "sdag_standard_appcontrol"
        set other-application-log enable
        config entries
            edit 1
                set category 2 6
            next
        end
    next
end
config user local
    edit "sdag"
        set type password
        set passwd ENC CKbYxkLJf9n5x+jrJu5/8QJKB25Cj/VubuTisNAwZG4ai/AARJaQL4WAq4A6KCuzoNyo32ScRgBTZYjNWrpQvD0YaL5zybI9igAGiupKBooeNZwcCAxWde5OpCwssJO948OvdRmc2OwmDgYWuSqZ19aMLjdxBhxCXNiwBYnEkS7NALz9Vx5LR3G2v1heN9xXyemEYw==
    next
end
config user group
    edit "G_S_ClientVPN_Local-Auth"
        set member "sdag"
    next
end
config firewall address 
edit E_N_LAN
set subnet 172.16.220.1 255.255.255.0
next
end

config vpn ssl web portal
    edit "sdag_standard_portal"
        set tunnel-mode enable
        set keep-alive enable
        set save-password enable
        set ip-pools "SSLVPN_TUNNEL_ADDR1"
        set split-tunneling-routing-address "E_N_LAN"
        set forticlient-download-method ssl-vpn
        set customize-forticlient-download-url enable
        set windows-forticlient-download-url "https://links.fortinet.com/forticlient/win/vpnagent"
        set macos-forticlient-download-url "https://links.fortinet.com/forticlient/mac/vpnagent"
    next
end
config vpn ssl settings
    set servercert "Fortinet_Factory"
    set tunnel-ip-pools "SSLVPN_TUNNEL_ADDR1"
    set port 443
    set source-interface "wan1"
    set source-address "all"
    set source-address6 "all"
    set default-portal "sdag_standard_portal"
end
config dnsfilter profile    
    edit "sdag_standard_dnsfilter"
        config ftgd-dns
            set options error-allow
            config filters
                edit 1
                    set category 3
                    set action block
                next
                edit 2
                    set category 12
                    set action block
                next
                edit 3
                    set category 83
                    set action block
                next
                edit 4
                    set category 13
                    set action block
                next
                edit 5
                    set category 14
                    set action block
                next
                edit 6
                    set category 26
                    set action block
                next
                edit 7
                    set category 61
                    set action block
                next
                edit 8
                    set category 86
                    set action block
                next
                edit 9
                    set category 88
                    set action block
                next
                edit 10
                    set category 90
                next
                edit 11
                    set category 91
                next
                edit 12
                next
            end
        end
        set block-botnet enable
    next
end
config antivirus settings
    set grayware enable
end
config antivirus profile
    edit "sdag_standard_antivirus"
        config http
            set options scan
            set outbreak-prevention full-archive
        end
        config ftp
            set options scan
            set outbreak-prevention full-archive
        end
        config imap
            set options scan
            set outbreak-prevention full-archive
        end
        config pop3
            set options scan
            set outbreak-prevention full-archive
        end
        config smtp
            set options scan
            set outbreak-prevention full-archive
        end
        config nntp
            set outbreak-prevention full-archive
        end
        config cifs
            set options scan
            set outbreak-prevention full-archive
        end
        config outbreak-prevention
            set ftgd-service enable
        end
    next
end
config webfilter profile
    edit "sdag_standard_webfilter"
        set options block-invalid-url
        config ftgd-wf
            set options error-allow rate-server-ip
            config filters
                edit 26
                    set category 26
                    set action block
                next
                edit 61
                    set category 61
                    set action block
                next
                edit 86
                    set category 86
                    set action block
                next
                edit 88
                    set category 88
                    set action block
                next
                edit 90
                    set category 90
                next
                edit 91
                    set category 91
                next
                edit 3
                    set category 3
                    set action block
                next
                edit 12
                    set category 12
                    set action block
                next
                edit 83
                    set category 83
                    set action block
                next
                edit 13
                    set category 13
                    set action block
                next
                edit 14
                    set category 14
                    set action block
